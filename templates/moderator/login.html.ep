% layout 'default';
% title 'Moderator Login';
<h2><%= title %></h2>
<form method="post">
  <div class="email field">
    <%= label_for email => 'Email' %>
    <%= email_field email => (id => 'email') %>
  </div>
  <div class="password field">
    <%= label_for password => 'Password' %>
    <%= password_field password => (id => 'password') %>
  </div>
  <%= submit_button 'Login' %>
</form>
