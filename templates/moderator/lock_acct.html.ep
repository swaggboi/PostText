% layout 'default';
% title 'Lock Account';
<h2 class="page-title"><%= title %></h2>
<form method="post" class="form-body">
  <div class="form-field">
    <%= label_for email => 'Email' %>
    <%= email_field email => (id => 'email') %>
  </div>
  <button type="submit" class="form-button">Lock</button>
</form>
